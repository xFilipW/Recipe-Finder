<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tab1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="false"
            android:paddingBottom="12dp"
            android:text="By category"
            android:textAppearance="@style/TextAppearance.Design.Tab"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:textAllCaps="false" />

        <View
            android:id="@+id/tab1Underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainColor"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/tab1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tab2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="false"
            android:paddingBottom="12dp"
            android:text="By recipe"
            android:textAppearance="@style/TextAppearance.Design.Tab"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:textAllCaps="false" />

        <View
            android:id="@+id/tab2Underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainColor"
            android:visibility="visible" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/nearlyWhite"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/tab2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recipesCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/mainColor"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tab1" />

</androidx.constraintlayout.widget.ConstraintLayout>
