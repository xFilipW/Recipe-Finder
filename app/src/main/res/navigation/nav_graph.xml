<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainHomeFragment">

    <fragment
        android:id="@+id/mainHomeFragment"
        android:name="com.example.recipefinder.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainHomeFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.recipefinder.ui.recipedetails.RecipeDetailsFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_details">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>


    <fragment
        android:id="@+id/mainRandomFragment"
        android:name="com.example.recipefinder.ui.shoppinglist.ShoppingListFragment"
        android:label="Random"
        tools:layout="@layout/fragment_shopping_list" />

    <fragment
        android:id="@+id/favouriteRecipesFragment"
        android:name="com.example.recipefinder.ui.favouriterecipes.FavouriteRecipesFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_favourite_recipes" />
</navigation>